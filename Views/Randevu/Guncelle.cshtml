@model Proje.Models.Randevu

<h2>Randevu Güncelle</h2>

<form asp-action="Guncelle" method="post">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label asp-for="MusteriID"></label>
        <select asp-for="MusteriID" class="form-control" asp-items="ViewBag.Musteriler"></select>
    </div>

    <div class="form-group">
        <label asp-for="CalisanID"></label>
        <select asp-for="CalisanID" class="form-control" asp-items="ViewBag.Calisanlar"></select>
    </div>

    <div class="form-group">
        <label asp-for="UzmanlikID"></label>
        <select asp-for="UzmanlikID" class="form-control" asp-items="ViewBag.Uzmanliklar"></select>
    </div>

    <div class="form-group">
        <label asp-for="RandevuTarihi"></label>
        <input type="datetime-local" asp-for="RandevuTarihi" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ToplamFiyat"></label>
        <input type="number" asp-for="ToplamFiyat" class="form-control" step="0.01" />
    </div>

    <div class="form-group">
        <label asp-for="Durum"></label>
        <input type="text" asp-for="Durum" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
