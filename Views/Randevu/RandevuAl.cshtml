@model Proje.Models.Randevu

@{
    ViewData["Title"] = "Randevu Al";
}

<h2 class="text-center mt-4">Randevu Al</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<form asp-action="RandevuAl" method="post">
    <div class="form-group">
        <label for="uzmanlikId">Uzmanlık Alanı</label>
        <select class="form-control" id="uzmanlikId" name="uzmanlikId">
            @if (ViewBag.UzmanlikAlanlari != null)
            {
                foreach (var uzmanlik in ViewBag.UzmanlikAlanlari)
                {
                    <option value="@uzmanlik.Value">@uzmanlik.Text</option>
                }
            }
            else
            {
                <option disabled>Uzmanlık alanı bulunmamaktadır.</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="randevuTarihi">Randevu Tarihi</label>
        <input type="date" class="form-control" id="randevuTarihi" name="randevuTarihi" required />
    </div>

    <div class="form-group">
        <label for="randevuSaati">Randevu Saati</label>
        <input type="time" class="form-control" id="randevuSaati" name="randevuSaati" required />
    </div>

    <button type="submit" class="btn btn-primary">Randevu Al</button>
</form>

<div class="mt-4">
    <a asp-action="RandevuListele" class="btn btn-secondary">Geri Dön</a>
</div>
