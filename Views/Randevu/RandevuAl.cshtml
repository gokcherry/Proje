@model Proje.Models.Randevu

<h2>Randevu Al</h2>

<form asp-action="RandevuAl" method="post">
    <div class="form-group">
        <label>Uzmanlık Alanı</label>
        <select asp-for="UzmanlikID" asp-items="ViewBag.UzmanlikAlanlari" class="form-control">
            <option value="">-- Uzmanlık Alanı Seçiniz --</option>
        </select>
        <span asp-validation-for="UzmanlikID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Randevu Tarihi</label>
        <input asp-for="RandevuTarihi" class="form-control" type="datetime-local" />
        <span asp-validation-for="RandevuTarihi" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Randevu Al</button>
</form>




