@model IEnumerable<Proje.Models.Randevu>

@{
    ViewData["Title"] = "Randevularım";
}

<style>
    .table-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 30px;
    }

    h2 {
        color: #5a5a5a;
    }

    .alert {
        background-color: #f8f9fa;
        color: #5a5a5a;
        border: 1px solid #dcdcdc;
    }

    .btn-info {
        background-color: #6c757d;
        border: none;
        color: white;
        transition: background-color 0.3s ease;
    }

        .btn-info:hover {
            background-color: #5a5a5a;
        }
</style>

<div class="container mt-5">
    <h2 class="text-center">Randevularım</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert mt-3">
            @TempData["Message"]
        </div>
    }

    <div class="table-container">
        <table class="table table-striped">
            <thead class="table-secondary">
                <tr>
                    <th>#</th>
                    <th>Uzmanlık</th>
                    <th>Çalışan</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var randevu in Model)
                {
                    <tr>
                        <td>@randevu.ID</td>
                        <td>@randevu.Uzmanlik?.Ad</td>
                        <td>@randevu.Calisan?.Ad</td>
                        <td>@randevu.RandevuTarihi.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@randevu.Durum</td>
                        <td>
                            <a asp-action="RandevuDetay" asp-route-id="@randevu.ID" class="btn btn-info btn-sm">Detay</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
