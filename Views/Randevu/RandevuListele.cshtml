@model IEnumerable<Proje.Models.Randevu>

@{
    ViewData["Title"] = "Randevularım";
}

<h2 class="text-center mt-4">Randevularım</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Uzmanlık</th>
            <th>Çalışan</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.ID</td>
                <td>@randevu.Uzmanlik?.Ad</td>
                <td>@randevu.Calisan?.Ad</td>
                <td>@randevu.RandevuTarihi.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@randevu.Durum</td>
                <td>
                    <a asp-action="RandevuDetay" asp-route-id="@randevu.ID" class="btn btn-info btn-sm">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>
