@model Proje.Models.Randevu
@{
    ViewData["Title"] = "Randevu Sil";
}

<div class="container mt-4">
    <h2 class="text-center text-danger mb-4">Randevu Sil</h2>
    <p>Bu randevuyu silmek istediğinizden emin misiniz?</p>
    <dl class="row">
        <dt class="col-sm-3">Müşteri:</dt>
        <dd class="col-sm-9">@Model.Musteri?.Ad @Model.Musteri?.Soyad</dd>
        <dt class="col-sm-3">Tarih:</dt>
        <dd class="col-sm-9">@Model.RandevuTarihi.ToString("dd/MM/yyyy HH:mm")</dd>
        <dt class="col-sm-3">Durum:</dt>
        <dd class="col-sm-9">@Model.Durum</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Listele" class="btn btn-secondary">İptal</a>
    </form>
</div>
