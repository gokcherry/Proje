@model IEnumerable<Proje.Models.Randevu>
@{
    ViewData["Title"] = "Randevular Listele";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Randevular</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Müşteri Adı</th>
                <th>Çalışan Adı</th>
                <th>Uzmanlık</th>
                <th>Tarih</th>
                <th>Durum</th>
                <th>Toplam Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.ID</td>
                    <td>@randevu.Musteri?.Ad @randevu.Musteri?.Soyad</td>
                    <td>@randevu.Calisan?.Ad @randevu.Calisan?.Soyad</td>
                    <td>@randevu.Uzmanlik?.Ad</td>
                    <td>@randevu.RandevuTarihi.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@randevu.Durum</td>
                    <td>@string.Format("{0:C}", randevu.ToplamFiyat)</td>
                    <td>
                        <a asp-action="Guncelle" asp-route-id="@randevu.ID" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Sil" asp-route-id="@randevu.ID" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Ekle" class="btn btn-primary">Yeni Randevu Ekle</a>
</div>
