@using Proje.ViewModels;
@model LoginViewModel;

@{
    Layout = "~/Views/Shared/_HesapLayout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg" style="width: 400px; padding: 30px; border-radius: 10px;">
        <h2 class="text-center mb-4">Giriş Yap</h2>

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.SuccessMessage
            </div>
        }

        <form asp-action="Login" method="post">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <!-- Email Field -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" class="form-control" id="email" placeholder="E-posta adresinizi girin" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" class="form-control" id="password" type="password" placeholder="Şifrenizi girin" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Remember Me and Forgot Password in the Same Row -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                    <label asp-for="RememberMe" class="form-check-label" for="rememberMe">Beni Hatırla</label>
                </div>
                <a asp-controller="Hesap" asp-action="ForgotPassword" class="text-decoration-none">Şifremi Sıfırla</a>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-success w-100 p-2">Giriş Yap</button>

            <!-- Registration Link -->
            <p class="text-center mt-3">
                Hesabınız yok mu? <a asp-controller="Hesap" asp-action="Register" class="text-decoration-none">Hesap Oluştur</a>
            </p>

            <!-- Back to Home Link -->
            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none">Geri Dön</a>
            </div>
        </form>
    </div>
</div>
