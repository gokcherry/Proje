@{
    ViewData["Title"] = "İşlenmiş Fotoğraf";
}

<style>
    .result-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 50px auto;
        text-align: center;
    }

    h2 {
        color: #5a5a5a;
        text-align: center;
        margin-bottom: 20px;
    }

    img {
        max-width: 100%;
        height: auto;
        border: 1px solid #dcdcdc;
        border-radius: 10px;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #842029;
        border: 1px solid #f5c2c7;
        border-radius: 5px;
        padding: 15px;
    }

    .btn-secondary {
        background-color: #f0f0f0;
        color: #333333;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #dcdcdc;
        }
</style>

<div class="result-container">
    <h2>İşlenmiş Sonuç</h2>

    @if (ViewData["ResultImageUrl"] != null)
    {
        <div class="mt-4">
            <img src="@ViewData["ResultImageUrl"]" alt="İşlenmiş Fotoğraf" class="img-fluid border rounded" />
        </div>
    }
    else
    {
        <div class="alert alert-danger mt-4">
            <p>Bir hata oluştu. Lütfen tekrar deneyin.</p>
        </div>
    }

    <div class="mt-4">
        <a asp-controller="AI" asp-action="AI" class="btn btn-secondary">Geri Dön</a>
    </div>
</div>
