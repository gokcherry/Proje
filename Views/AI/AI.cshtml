@{
    ViewData["Title"] = "AI";
}

<style>
    .form-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 50px auto;
    }

    h2 {
        color: #5a5a5a;
        text-align: center;
        margin-bottom: 20px;
    }

    label {
        color: #5a5a5a;
    }

    .form-control {
        border: 1px solid #dcdcdc;
        border-radius: 5px;
    }

    .form-control:focus {
        border-color: #a9a9a9;
        box-shadow: 0 0 5px rgba(169, 169, 169, 0.5);
    }

    .btn-primary {
        background-color: #dcdcdc;
        color: #333333;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #bcbcbc;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #842029;
        border: 1px solid #f5c2c7;
        border-radius: 5px;
        padding: 10px;
        text-align: center;
    }
</style>

<div class="form-container">
    <h2>Fotoğraf Yükle ve Talep Gir</h2>
    <form asp-controller="AI" asp-action="ProcessPhoto" enctype="multipart/form-data" method="post">
        <div class="mb-3">
            <label for="photo" class="form-label">Fotoğraf Yükle:</label>
            <input type="file" name="photo" id="photo" class="form-control" accept="image/*" required>
        </div>
        <div class="mb-3">
            <label for="userRequest" class="form-label">Talebinizi Yazın:</label>
            <textarea name="userRequest" id="userRequest" class="form-control" rows="3" placeholder="Örn: Kızıl saç rengi, kısa saç modeli..." required></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100" id="submitButton">Gönder</button>
    </form>

    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">@ViewData["Error"]</div>
    }
</div>
