@model Proje.Models.Calisanlar

<style>
    .detail-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 50px auto;
    }

    h1, h4 {
        color: #5a5a5a;
        text-align: center;
    }

    dt {
        color: #333333;
        font-weight: bold;
    }

    dd {
        color: #5a5a5a;
        margin-bottom: 10px;
    }

    ul {
        padding-left: 20px;
    }

        ul li {
            color: #5a5a5a;
        }

    .btn-warning {
        background-color: #ffc107;
        border: none;
        color: white;
        border-radius: 5px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-secondary {
        background-color: #f0f0f0;
        color: #333333;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #dcdcdc;
        }

    hr {
        border-top: 1px solid #dcdcdc;
    }
</style>

<div class="detail-container">
    <h1>Çalışan Detayları</h1>
    <h4>Çalışan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">Ad</dt>
        <dd class="col-sm-8">@Model.Ad</dd>
        <dt class="col-sm-4">Soyad</dt>
        <dd class="col-sm-8">@Model.Soyad</dd>
        <dt class="col-sm-4">Email</dt>
        <dd class="col-sm-8">@Model.Email</dd>
        <dt class="col-sm-4">Telefon</dt>
        <dd class="col-sm-8">@Model.Telefon</dd>
        <dt class="col-sm-4">Uzmanlık Alanları</dt>
        <dd class="col-sm-8">
            <ul>
                @foreach (var uzmanlik in Model.UzmanlikAlanlari)
                {
                    <li>@uzmanlik.Uzmanlik.Ad</li>
                }
            </ul>
        </dd>
    </dl>
    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Guncelle" asp-route-id="@Model.ID" class="btn btn-warning">Güncelle</a>
        <a asp-action="Listele" class="btn btn-secondary">Listeye Geri Dön</a>
    </div>
</div>
