@model Proje.Models.Calisanlar

@{
    ViewData["Title"] = "Çalışan Sil";
}

<h1>Çalışan Sil</h1>

<div>
    <h4>Silmek istediğiniz çalışan:</h4>
    <dl class="row">
        <dt class="col-sm-2">Ad</dt>
        <dd class="col-sm-10">@Model.Ad</dd>

        <dt class="col-sm-2">Soyad</dt>
        <dd class="col-sm-10">@Model.Soyad</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Model.Telefon</dd>

        <dt class="col-sm-2">Uzmanlık Alanları</dt>
        <dd class="col-sm-10">
            @if (Model.UzmanlikAlanlari != null && Model.UzmanlikAlanlari.Any())
            {
                <ul>
                    @foreach (var uzmanlik in Model.UzmanlikAlanlari)
                    {
                        <li>@uzmanlik.Uzmanlik.Ad</li>
                    }
                </ul>
            }
            else
            {
                <span>Uzmanlık alanı yok.</span>
            }
        </dd>

        <dt class="col-sm-2">Randevular</dt>
        <dd class="col-sm-10">
            @if (Model.Randevular != null && Model.Randevular.Any())
            {
                <ul>
                    @foreach (var randevu in Model.Randevular)
                    {
                        <li>@randevu.RandevuTarihi.ToString("dd/MM/yyyy HH:mm") - @randevu.Durum</li>
                    }
                </ul>
            }
            else
            {
                <span>Bu çalışana ait randevu yok.</span>
            }
        </dd>
    </dl>
</div>

<div class="alert alert-danger">
    <strong>Dikkat!</strong> Bu çalışanı silmek istediğinize emin misiniz? Bu işlem geri alınamaz!
</div>

<form asp-action="CalisanSil" method="post">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
