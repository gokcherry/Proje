@model IEnumerable<Proje.Models.Calisanlar>

@{
    ViewData["Title"] = "Çalışanları Listele";
}

<style>
    .table-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 30px;
    }

    h1 {
        color: #5a5a5a;
        text-align: center;
        margin-bottom: 20px;
    }

    ul {
        padding-left: 20px;
    }

        ul li {
            color: #5a5a5a;
        }

    .btn-warning {
        background-color: #ffc107;
        border: none;
        color: white;
        border-radius: 5px;
        padding: 5px 10px;
        transition: background-color 0.3s ease;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-info {
        background-color: #6c757d;
        border: none;
        color: white;
        border-radius: 5px;
        padding: 5px 10px;
        transition: background-color 0.3s ease;
    }

        .btn-info:hover {
            background-color: #5a5a5a;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
        border-radius: 5px;
        padding: 5px 10px;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #bd2130;
        }

    .btn-primary {
        background-color: #dcdcdc;
        color: #333333;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
        margin-top: 20px;
    }

        .btn-primary:hover {
            background-color: #bcbcbc;
        }

    .table-secondary {
        background-color: #f8f9fa;
    }
</style>

<div class="container mt-5">
    <h1>Çalışan Listesi</h1>
    <div class="table-container">
        <table class="table table-striped">
            <thead class="table-secondary">
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>Uzmanlık Alanları</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var calisan in Model)
                {
                    <tr>
                        <td>@calisan.ID</td>
                        <td>@calisan.Ad</td>
                        <td>@calisan.Soyad</td>
                        <td>@calisan.Email</td>
                        <td>@calisan.Telefon</td>
                        <td>
                            @if (calisan.UzmanlikAlanlari != null && calisan.UzmanlikAlanlari.Any())
                            {
                                <ul>
                                    @foreach (var uzmanlik in calisan.UzmanlikAlanlari)
                                    {
                                        <li>@uzmanlik.Uzmanlik.Ad</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span>Uzmanlık Alanları Yok</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Guncelle" asp-route-id="@calisan.ID" class="btn btn-sm btn-warning">Güncelle</a>
                            <a asp-action="Detay" asp-route-id="@calisan.ID" class="btn btn-sm btn-info">Detay</a>
                            <a asp-action="Sil" asp-route-id="@calisan.ID" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-end">
        <a asp-action="Ekle" class="btn btn-primary">Yeni Çalışan Ekle</a>
    </div>
</div>
