@model Proje.Models.Kullanicilar
@{
    ViewData["Title"] = "Müşteri Sil";
}

<div class="container mt-4">
    <h2 class="text-center text-danger">Müşteri Sil</h2>

    <div class="alert alert-warning">
        <p>Bu kullanıcıyı silmek istediğinizden emin misiniz?</p>
    </div>

    <table class="table table-bordered">
        <tr>
            <th>Ad</th>
            <td>@Model.Ad</td>
        </tr>
        <tr>
            <th>Soyad</th>
            <td>@Model.Soyad</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Telefon</th>
            <td>@Model.Telefon</td>
        </tr>
    </table>

    <form asp-action="SilOnayla" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Listele" class="btn btn-secondary">İptal</a>
    </form>
</div>
