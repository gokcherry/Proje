@model IEnumerable<Proje.Models.Kullanicilar>
@{
    ViewData["Title"] = "Müşteri Listele";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Müşteri Listele</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Email</th>
                <th>Telefon</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kullanici in Model)
            {
                <tr>
                    <td>@kullanici.Id</td>
                    <td>@kullanici.Ad</td>
                    <td>@kullanici.Soyad</td>
                    <td>@kullanici.Email</td>
                    <td>@kullanici.PhoneNumber</td>
                    <td>
                        <a asp-action="Guncelle" asp-route-id="@kullanici.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Sil" asp-route-id="@kullanici.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Ekle" class="btn btn-primary">Yeni Müşteri Ekle</a>
</div>
