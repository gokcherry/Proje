@model IEnumerable<Proje.Models.Kullanicilar>

@{
    ViewData["Title"] = "Kullanıcı Listele";
}

<h1>Kullanıcı Listesi</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kullanici in Model)
        {
            <tr>
                <td>@kullanici.Id</td>
                <td>@kullanici.Ad</td>
                <td>@kullanici.Email</td>
                <td>@kullanici.Telefon</td>
                <td>
                    <a asp-action="Guncelle" asp-route-id="@kullanici.Id" class="btn btn-sm btn-warning">Güncelle</a>
                    <a asp-action="Sil" asp-route-id="@kullanici.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Ekle" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
</div>
