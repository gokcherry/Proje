@model IEnumerable<Proje.Models.Kullanicilar>

@{
    ViewData["Title"] = "Kullanıcı Listele";
}

<style>
    .table-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 30px;
    }

    h1 {
        color: #5a5a5a;
        text-align: center;
        margin-bottom: 20px;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
        color: white;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
    }

        .btn-danger:hover {
            background-color: #bd2130;
        }

    .btn-primary {
        background-color: #dcdcdc;
        color: #333333;
        border: none;
        margin-top: 20px;
    }

        .btn-primary:hover {
            background-color: #bcbcbc;
        }

    .table-secondary {
        background-color: #f8f9fa;
    }
</style>

<div class="container mt-5">
    <h1>Kullanıcı Listesi</h1>
    <div class="table-container">
        <table class="table table-striped">
            <thead class="table-secondary">
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kullanici in Model)
                {
                    <tr>
                        <td>@kullanici.Id</td>
                        <td>@kullanici.Ad</td>
                        <td>@kullanici.Email</td>
                        <td>@kullanici.Telefon</td>
                        <td>
                            <a asp-action="Guncelle" asp-route-id="@kullanici.Id" class="btn btn-sm btn-warning">Güncelle</a>
                            <a asp-action="Sil" asp-route-id="@kullanici.Id" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-end">
        <a asp-action="Ekle" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
    </div>
</div>
